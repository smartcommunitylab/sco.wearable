<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d505a"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".tracking_sync"
    tools:deviceIds="wear">

    <TextClock
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85pt"
        android:textColor="@color/white"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingBottom="3pt"/>

    <ImageView
        android:id="@+id/tracking_sync_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/tracking_activity_background"
        android:tint="#4d5d66"
        app:boxedEdges="all"
        android:layout_marginTop="10pt"
        />

    <TextView
        android:id="@+id/tracking_sync_txt"
        android:layout_width="80pt"
        android:layout_height="match_parent"
        android:layout_marginStart="10pt"
        android:layout_marginBottom="15pt"
        android:layout_marginTop="15pt"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="11pt"
        android:textStyle="bold" />

</android.support.wear.widget.BoxInsetLayout>